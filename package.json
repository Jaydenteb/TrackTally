{
  "name": "behaviour-logger",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run migrate:deploy && prisma generate && next build",
    "migrate:deploy": "if [ -n \"$DIRECT_DATABASE_URL\" ]; then prisma migrate deploy; else echo 'Skipping migrations (DIRECT_DATABASE_URL not set)'; fi",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@prisma/client": "^5.12.1",
    "@sentry/nextjs": "^10.23.0",
    "googleapis": "^133.0.0",
    "idb": "^8.0.0",
    "next": "15.0.0-canary.53",
    "next-auth": "5.0.0-beta.19",
    "nodemailer": "^6.9.11",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prisma": "^5.12.1",
    "react": "19.0.0-rc.0",
    "react-dom": "19.0.0-rc.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.12.12",
    "@types/nodemailer": "^6.4.21",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.1.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.0.0-canary.53",
    "jsdom": "^23.0.1",
    "pg": "^8.16.3",
    "typescript": "^5.4.5",
    "vitest": "^1.1.0"
  }
}
