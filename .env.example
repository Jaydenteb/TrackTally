# Google Sheets document ID (from the sheet URL)
SHEET_ID=""

# Service Account email with access to the sheet
GOOGLE_SERVICE_ACCOUNT_EMAIL=""

# Paste the private key as copied from Google Cloud and keep the literal \n sequences
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Google OAuth credentials for NextAuth (create via Google Cloud Console)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=""

# Mobile auth ticket lifetime in minutes (adjust if native sign-in needs longer)
MOBILE_AUTH_TOKEN_TTL_MINUTES="5"

# Comma-separated list of super admin Google emails (global control)
SUPER_ADMIN_EMAILS="jaydenteb@gmail.com"

# Restrict sign-ins to a single Workspace domain (optional)
ALLOWED_GOOGLE_DOMAIN=""

# Comma-separated list of admin Google emails (auto-provisioned on first login)
ADMIN_EMAILS=""

# Prisma database (e.g. Neon Postgres connection string)
DATABASE_URL="postgresql://tracktally_app:a-strong-password@<host>-pooler.neon.tech/tracktally_prod?sslmode=require&pgbouncer=true"

# Direct owner connection for migrations (non-pooled; Prisma uses this via directUrl)
DIRECT_DATABASE_URL="postgresql://neondb_owner:owner-password@<host>.neon.tech/tracktally_prod?sslmode=require"

# Shadow database (owner connection) used by prisma migrate dev in local development
SHADOW_DATABASE_URL="postgresql://neondb_owner:owner-password@<host>.neon.tech/tracktally_prod_shadow?sslmode=require"

# Optional: SMTP settings for incident notification emails
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="TrackTally <no-reply@example.com>"
